@startuml

left to right direction

actor "Пользователь" as User

rectangle "Умный список задач" {

    usecase "Добавление новой задачи" as AddTask
    usecase "Пометка задачи как выполненной" as CompleteTask
    usecase "Редактирование задачи" as EditTask
    usecase "Удаление задачи" as DeleteTask
    usecase "Просмотр списка задач" as ViewTasks
    usecase "Фильтрация задач по категориям" as FilterTasks
    usecase "Автосохранение изменений" as AutoSave
    usecase "Валидация данных" as ValidateData
    usecase "Поиск задач" as SearchTasks
    usecase "Сортировка задач" as SortTasks
}

' include связи
AddTask --> ValidateData : include
EditTask --> ValidateData : include
EditTask --> AutoSave : include

' extend связи
ViewTasks <-- FilterTasks : extend
ViewTasks <-- SearchTasks : extend
ViewTasks <-- SortTasks : extend

' Actor connections
User --> AddTask
User --> CompleteTask
User --> EditTask
User --> DeleteTask
User --> ViewTasks

@enduml
